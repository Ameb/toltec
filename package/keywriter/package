pkgname=keywriter
pkgver=0.2.0
pkgsect=editors
pkgdesc="Markdown editor using input from an OTG keyboard"
pkgmaint="Matt√©o Delabre <spam@delab.re>"

origin=https://github.com/dps/remarkable-keywriter.git
revision=v0.2

build() {
    pushd "$srcdir"
    qmake edit.pro -spec linux-oe-g++
    make
    popd
}

package() {
    install -D -m 755 "$srcdir"/edit "$pkgdir"/usr/bin/keywriter
}
